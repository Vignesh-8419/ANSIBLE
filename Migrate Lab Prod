systemctl enable --now docker

ğŸ”¹ 3ï¸âƒ£ Kubernetes Components

ğŸ“ RUN ON: ALL NODES

cat <<EOF > /etc/yum.repos.d/kubernetes.repo
[kubernetes]
name=Kubernetes
baseurl=https://packages.cloud.google.com/yum/repos/kubernetes-el7-\$basearch
enabled=1
gpgcheck=0
EOF

dnf install -y kubelet kubeadm kubectl
systemctl enable --now kubelet

ğŸ”¹ 4ï¸âƒ£ Initialize Kubernetes

ğŸ“ RUN ON: CONTROL-PLANE ONLY

â— ONLY on a NEW cluster

[ -f /etc/kubernetes/admin.conf ] && echo "Cluster already initialized" && exit 1

kubeadm init --pod-network-cidr=10.244.0.0/16 --upload-certs

export KUBECONFIG=/etc/kubernetes/admin.conf
kubectl taint nodes --all node-role.kubernetes.io/control-plane-

ğŸ”¹ 5ï¸âƒ£ Join Worker Nodes

ğŸ“ CONTROL-PLANE

kubeadm token create --print-join-command


ğŸ“ EACH WORKER NODE

kubeadm join <CONTROL-PLANE-IP>:6443 --token <TOKEN> \
--discovery-token-ca-cert-hash sha256:<HASH>

ğŸ”¹ 6ï¸âƒ£ Install Flannel CNI (PINNED)

ğŸ“ CONTROL-PLANE ONLY

