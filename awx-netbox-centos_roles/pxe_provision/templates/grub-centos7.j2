set default=0
set timeout=5

insmod efinet
insmod net
insmod http
dhcp

menuentry "Install CentOS 7" {
    linuxefi centos/vmlinuz \
        ip=dhcp \
        inst.repo=http://{{ http_server }}/repo/centos/ \
        inst.stage2=http://{{ http_server }}/repo/centos/ \
        inst.ks=http://{{ http_server }}/{{ kickstart_path }} \
        inst.text \
        inst.default_fstype=ext4 \
        hostname={{ server.hostname }} \
        console=tty0
    initrdefi centos/initrd.img
}

